{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-extra-parens": "warn",
    "no-irregular-whitespace": "warn",
    "eqeqeq": "error",
    "no-shadow": "warn",
    "no-use-before-define": "warn",
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "no-console": "warn",
    "no-unused-vars": "warn",
    "comma-dangle": "error",
    "space-before-blocks": "error",
    "no-case-declarations": "off"
  }
}
